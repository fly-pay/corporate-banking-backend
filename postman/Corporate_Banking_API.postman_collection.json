{
	"info": {
		"_postman_id": "corporate-banking-api-collection",
		"name": "Corporate Banking API",
		"description": "Postman collection for Corporate Banking Backend API (Gateway Service on port 8080)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
